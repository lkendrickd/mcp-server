# MCP Server Configuration
# Copy this file to .env and update values as needed

# Server port (default: 8080)
PORT=8080

# MCP transport: stdio (default) or http
# Use stdio for Claude Desktop/CLI tools
# Use http for Docker/HTTP deployments with Claude Code
MCP_TRANSPORT=stdio

# API Key Authentication (HTTP transport only)
# Set to true to require X-API-Key header on /mcp endpoints
AUTH_ENABLED=false

# Comma-separated list of valid API keys
# Example: API_KEYS=key1,key2,secret-key-123
API_KEYS=

# Deployment environment (default: development)
# Used for telemetry resource attributes
ENVIRONMENT=development

# =============================================================================
# Rate Limiting (DDoS Protection)
# =============================================================================

# Enable rate limiting (default: true)
# Per-IP rate limiting using token bucket algorithm
RATE_LIMIT_ENABLED=true

# Requests per second per IP (default: 10)
RATE_LIMIT_RPS=10

# Maximum burst size per IP (default: 20)
# Allows short bursts above the RPS limit
RATE_LIMIT_BURST=20

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================

# If OTEL_COLLECTOR_HOST is set, traces are sent to the OTEL collector
# For local development: OTEL_COLLECTOR_HOST=localhost
# For docker-compose: defaults to otel-collector
OTEL_COLLECTOR_HOST=

# OTEL collector gRPC port (default: 4317)
OTEL_COLLECTOR_PORT=4317
